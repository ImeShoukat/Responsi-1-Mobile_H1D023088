<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:backgroundTint="@color/lightyellow">

    <ImageView
        android:id="@+id/fcclub"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/club"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logo_pm_fc"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/fc_logo"
        app:layout_constraintBottom_toBottomOf="@id/fcclub"
        app:layout_constraintLeft_toLeftOf="@id/fcclub"
        app:layout_constraintRight_toRightOf="@id/fcclub"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/Primary"
        android:padding="4dp"
        android:text="@string/app_name"
        android:textColor="@color/Text_Color"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_pm_fc"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/material_dynamic_primary90"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/fcclub">

        <TextView
            android:id="@+id/decs"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:padding="20dp"
            android:text="@string/app_desc"
            android:textSize="14dp"
            android:textStyle="italic" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linear_content_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card_desc">

        <include
            android:id="@+id/layout_history"
            layout="@layout/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <include
            android:id="@+id/layout_head"
            layout="@layout/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

        <include
            android:id="@+id/layout_team"
            layout="@layout/layout_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
